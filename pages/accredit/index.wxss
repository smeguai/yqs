.container {
    background: #fff;
    padding: 114rpx 36rpx 0 36rpx;
}

.container .image {
    width: 108rpx;
    height: 108rpx;
}

.container .name {
    font-size: 32rpx;
    padding: 48rpx 0 42rpx 0;
    border-bottom: 1rpx solid #eee;
    text-align: center;
}
.container .txt {
    font-size: 28rpx;
    font-weight: 500;
    padding: 48rpx 0 38rpx 0;
}
.container .subtxt {
    font-size: 24rpx;
    color: #999999;
    font-weight: 500;
    padding-left: 20rpx;
    position: relative;
}
.container .subtxt::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 10rpx;
    height: 10rpx;
    border-radius: 100%;
    background: #999;
}
.container .btns {
    display: flex;
    justify-content: space-between;
    padding-top: 58rpx;
}
.container .btns .btn {
    width: 320rpx;
    height: 76rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    font-size: 28rpx;
    font-weight: 500;
    text-align: center;
    line-height: 76rpx;
}

.container .btns .b0 {
    border: 2rpx solid #ccc;
}

.container .btns .b1 {
    background: #ffde4e;
}
