<view class="container">
    <!-- 搜索 -->
    <view class="xg_top">
        <view class="xg_search" >
            <view class="xg_search_city" bindtap="cityClick">
                <text>长沙市</text>
                <view></view>
            </view>
            <view class="xg_search_url" bindtap="selectClick">
                <image src="../../static/img/search.png"></image>
                <text>请输入小区名称</text>
            </view>
        </view>

        <view class="xg_record">
            <text class="xg_record_title">已选小区</text>
            <view class="xg_record_text">
                <view class="xg_record_textName">麓枫和苑</view>
                <view class="xg_record_textAdd">长沙市岳麓区</view>
            </view>
        </view>
    </view>

    <!-- 位置 -->
    <view class="xg_center">
        <view class="xg_centerTop">
            <view class="xg_centerTop_left">
                <image src="../../static/img/addrsicon.png"></image>
                <view>
                    <view class="xg_centerTop_leftTitle">目前位置</view>
                    <view class="xg_centerTop_leftText">{{data.stationName}}</view>
                </view>
            </view>
            <view class="xg_centerTop_right">修改</view>
        </view>
        <view class="xg_centerBot">
            <view class="xg_centerBotTitle">附近小区</view>
            <view class="xg_centerBot_text" wx:for="{{add}}" wx:for-index="index" wx:key="index">
                <view class="xg_centerBot_text_name">
                    <text class="xg_centerBot_text_name_estate">{{item.name}}</text>
                    <text class="xg_centerBot_text_name_num">{{item.num}}</text>
                </view>
                <view class="xg_centerBot_text_add">{{item.add}}</view>
            </view>
        </view>
    </view>
    
    <!-- 记录 -->
    <view class="xg_bottom">
        <view class="xg_bottom_title">历史记录</view>
        <view class="xg_bottom_text" wx:for="{{record}}" wx:for-index="index" wx:key="index">
            <view class="xg_bottom_textName">{{item.name}}</view>
            <view class="xg_bottom_textadd">{{item.record}}</view>
        </view>
    </view>
</view>