.container {
  padding: 16rpx 24rpx;
}

.butt {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  border-bottom: 1rpx solid #f0f0f0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background: #fff;
  padding: 0 24rpx;
}

.butt .submit {
  width: 100%;
  font-size: 32rpx;
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  background: #ffde4e;
  border-radius: 38rpx;
}

.sell {
  background: #fff;
  border-radius: 10rpx;
  padding: 26rpx 24rpx 41rpx;
}

.sell .top {
  display: flex;
}

.sell .top .avatar {
  width: 34rpx;
  height: 34rpx;
  border-radius: 100%;
}

.sell .top .name {
  padding-left: 18rpx;
  font-size: 24rpx;
}

.sell .info {
  padding-top: 30rpx;
  display: flex;
}

.sell .info .img {
  width: 158rpx;
  height: 158rpx;
}

.sell .info .desc {
  flex: 1;
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 0;
}

.sell .info .desc .title {
  font-size: 28rpx;
  font-weight: 600;
}

.sell .info .desc .sub {
  font-size: 24rpx;
  color: #666;
}

.sell .info .desc .butt {
  display: flex;
  justify-content: space-between;
}

.sell .info .desc .butt .price {
  font-size: 32rpx;
  font-weight: bold;
}

.sell .info .desc .butt .price .tagprice {
  padding-left: 10rpx;
  color: #999;
  font-size: 20rpx;
  font-weight: 400;
}

.sell .info .desc .butt .count {
  font-size: 24rpx;
  color: #999;
}

.grade-wrapper {
  background: #fff;
  border-radius: 10rpx;
  padding: 26rpx 24rpx;
  margin-top: 20rpx;
  margin-bottom: 98rpx;
}

.grade-wrapper .header {
  text-align: center;
  padding-bottom: 29rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.grade-wrapper .num {
  font-size: 26rpx;
  text-align: center;
  padding-top: 42rpx;
}

.grade-wrapper .grade {
  padding: 30rpx 0;
}

.grade-wrapper .ipttextarea {
  background: #f9f9f9;
  border: 1rpx solid #e9e9e9;
  font-size: 24rpx;
  width: 100%;
  padding: 26rpx 34rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.grade-wrapper .imglist {
  display: flex;
  padding: 28rpx 0;
}

.grade-wrapper .imglist .img {
  width: 100rpx;
  height: 100rpx;
  margin-right: 8rpx;
  border-radius: 10rpx;
}

.grade-wrapper .tips {
  color: #999;
  font-size: 24rpx;
}

.grade-wrapper .imglist .paizhao {
  background: #f9f9f9;
  border: 1rpx solid #e9e9e9;
  border-radius: 10rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.grade-wrapper .imglist .paizhao .icon {
  width: 54rpx;
  height: 54rpx;
}

.grade-wrapper .imglist .paizhao .txt {
  font-size: 20rpx;
}
