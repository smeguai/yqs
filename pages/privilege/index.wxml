<view class='container'>
    <view class='banner'>
        <swiper class='swipper' circular current='{{bannerCurrent}}' bindchange='bannerItemChange'>
            <swiper-item class='item' wx:for='{{bannerList}}' data-id='{{item.id}}'>
                <image src='{{item.img}}' class='img'></image>
            </swiper-item>
        </swiper>
        <view class='nums'>
            <view class='{{item.id == bannerCurrent ? "num-item active":"num-item"}}' wx:for='{{bannerList}}'></view>
        </view>
    </view>
    <view class='nearbywelfare section'>
        <view class='top'>
            <view class='heartxt'>附近好券</view>
            <view class='tabnav'>
                <view class='recommend btn'>推荐</view>
                <view class='hotsale btn'>热卖</view>
            </view>
        </view>
        <view class='list-wrapper'>
            <view class='list'>
                <view class='item' wx:for='{{list}}'>
                    <view class='main'>
                        <image src='{{item.avatar}}' class='avatar'></image>
                        <view class='info'>
                            <view class='top'>
                                <view class='name'>{{item.name}}</view>
                                <view class='lm ckbox'>联盟</view>
                                <view class='pp ckbox'>品牌</view>
                            </view>
                            <view class='middel'>
                                <grade score='{{item.score}}' />
                                <text>{{item.genre}}</text>|
                                <text>{{item.moods}}</text>
                                <text class='dis'>500米</text>
                            </view>
                            <view class='tag'>
                                <view class='tagitem' wx:for='{{item.tag}}'>{{item}}</view>
                            </view>
                        </view>
                    </view>
                    <scroll-view scroll-x class='ticket'>
                        <view class='block'>
                            <view class='ticketitem' wx:for='{{item.ticket}}'>
                                <view class='title'>{{item.title}}</view>
                                <view class='price'>￥{{item.price}}</view>
                                <view class='txt'>{{item.txt}}</view>
                                <view class='btn'>点击领取</view>
                            </view>
                        </view>
                    </scroll-view>
                </view>
            </view>
        </view>
    </view>

    <view class='nearbywelfare section'>
        <view class='top'>
            <view class='heartxt'>优惠团购</view>
            <view class='tabnav'>
                <view class='recommend btn'>推荐</view>
                <view class='hotsale btn'>热卖</view>
            </view>
        </view>
        <view class='lists'>
            <view class='item' wx:for='{{groupdata}}'>
                <image class='lists-img' src='http://img3.imgtn.bdimg.com/it/u=1609196093,165570490&fm=26&gp=0.jpg'></image>
                <view class='opera'>
                    <view class='lf'>
                        <view class='title str'>{{item.productName}}</view>
                        <view class='subtitle str'>{{item.productShoreDesc}}</view>
                    </view>
                    <view class='btn'>立即拼团</view>
                </view>
                <view class='info'>
                    <view class='tag'>拼团价</view>
                    <view class='txt'>￥
                        <text class='price'>{{item.price}}</text>
                        <text class='del oldprice'>￥{{item.tagPrice}}</text>
                    </view>
                    <view class='desc'>已售{{item.virtualSoldNum}}份/剩余{{item.quantity}}份</view>
                </view>
            </view>
        </view>


        
        <view class='top'>
            <view class='heartxt'>秒杀</view>
            <view class='tabnav'>
                <view class='recommend btn'>推荐</view>
                <view class='hotsale btn'>热卖</view>
            </view>
        </view>
        <view class='lists'>
            <view class='item' wx:for='{{groupdata}}'>
                <image class='lists-img' src='http://img3.imgtn.bdimg.com/it/u=1609196093,165570490&fm=26&gp=0.jpg'></image>
                <view class='opera'>
                    <view class='lf'>
                        <view class='title str'>{{item.productName}}</view>
                        <view class='subtitle str'>{{item.productShoreDesc}}</view>
                    </view>
                    <view class='btn'>立即拼团</view>
                </view>
                <view class='info'>
                    <view class='tag'>拼团价</view>
                    <view class='txt'>￥
                        <text class='price'>{{item.price}}</text>
                        <text class='del oldprice'>￥{{item.tagPrice}}</text>
                    </view>
                    <view class='desc'>已售{{item.virtualSoldNum}}份/剩余{{item.quantity}}份</view>
                </view>
            </view>
        </view>
    </view>
</view>