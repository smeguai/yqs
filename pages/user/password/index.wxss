.password_title {
    background: #F8F8F8;
    padding: 22rpx;
    color: #999999;
    font-size: 24rpx;
}
.password_view {
    padding: 26rpx 87rpx 0;
}
.password_viewInput {
    height: 78rpx;
    display: flex;
    align-items: center;
    border: 1rpx solid #CCCCCC;
    border-radius: 12rpx;
    margin-top: 44rpx;
}
.password_viewInput>text {
    width: 167rpx;
    color: #666666;
    font-size: 28rpx;
    padding: 0 20rpx;
}
.password_viewInput>input {
    height: 100%;
    font-size: 28rpx;
    flex: 1;
}
.password_viewCode {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 44rpx;
}
.password_viewCode>input {
    width: 284rpx;
    height: 78rpx;
    border: 1rpx solid #CCCCCC;
    border-radius: 12rpx;
    padding: 0 22rpx;
    color: #CCCCCC;
    font-size: 28rpx;
}
.password_viewCode>view {
    color: #333333;
    font-size: 24rpx;
    width:182rpx;
    height:78rpx;
    line-height: 78rpx;
    background:rgba(255,222,78,1);
    border-radius:12rpx;
    text-align: center;
}
.password_viewText {
    color: #CCCCCC;
    font-size: 28rpx;
    padding-top: 30rpx; 
}
.password_viewConfirm {
    width:422rpx;
    height:74rpx;
    line-height: 74rpx;
    color: #333333;
    font-size: 32rpx;
    background: #FFDE4E;
    text-align: center;
    border-radius:37rpx;
    margin-top: 189rpx;
    border: none;
}