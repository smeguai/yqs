.info_top {
    width: 100%;
    height: 320rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-bottom: 20rpx solid #F8F8F8;
}
.info_top>view {
    width: 100%;
    height: 148rpx;
    position: absolute;
    top: 0;
    background: #FFDE4E;
}
.info_top>image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    z-index: 6;
}
.info_top>text {
    color: #333333;
    font-size: 28rpx;
    margin-top: 18rpx;
}

.info_center {
    padding-left: 30rpx;
}
.info_center_view {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #EDEDED;
}
.info_center_view>view {
    width: 134rpx;
    color: #333333;
    font-size: 28rpx;
}
.info_center_view>input, .info_center_view>picker {
    color: #999999;
    font-size: 28rpx;
    flex: 1;
}
.info_center_view>image {
    width: 22rpx;
    height: 22rpx;
    padding: 0 30rpx;
}

.info_btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 98rpx;
    background:rgba(255,255,255,1);
    box-shadow:0rpx 1rpx 0rpx 0rpx rgba(240,240,240,1);
    display: flex;
    align-items: center;
    justify-content: center;
}
.info_btn>button {
    width: 702rpx;
    height: 74rpx;
    line-height: 74rpx;
    margin: 0;
    background:rgba(255,222,78,1);
    border-radius:37rpx;
}