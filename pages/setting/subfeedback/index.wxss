.container {
  padding: 30rpx 24rpx;
}
.container .section {
  background: #fff;
  border-radius: 10rpx;
  padding: 0 38rpx 
}
.container .section .title {
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  padding: 26rpx 0;
}
.container .section .textarea {
  border:1rpx solid  #E9E9E9;
  background: #F9F9F9;
  height: 246rpx;
  width: 100%;
  padding: 35rpx 29rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  margin: 38rpx 0;
}
.container .section .tips {
  font-size: 28rpx;
}
.container .section .img-wrapper {
  display: flex;
  padding: 36rpx 0;
}
.container .section .img-wrapper .item {
  position: relative;
}
.container .section .img-wrapper .item .img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  background: red;
}
.container .section .img-wrapper .item .icon {
  width: 24rpx;
  height: 24rpx;
  padding: 10rpx;
  position: absolute;
  top: -14rpx;
  right: -14rpx;
  border-radius: 100%;
  background: rgba(0,0,0, .8);
}
.container .section .img-wrapper .add {
  width: 100rpx;
  
}