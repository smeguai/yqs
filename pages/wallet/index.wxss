.container {
    background: #fff;
}
.container .price-wrapper {
    background: #FFDE4E;
    padding: 48rpx 0 46rpx 0;
    display: flex;
    flex-wrap: wrap;
}
.container .price-wrapper .item {
    flex: 1;
    text-align: center;
}
.container .price-wrapper .item .txt {
    font-size: 24rpx;
}
.container .price-wrapper .btns {
    width: 100%;
    padding-left: 124rpx;
    padding-top: 26rpx;
}
.container .price-wrapper .btns .btn {
    width: 128rpx;
    height: 54rpx;
    line-height: 54rpx;
    text-align: center;
    border-radius: 28rpx;
    font-size: 28rpx;
    border: 1rpx solid #333333;
}
.container .navs {
    padding: 0 24rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #EEEEEE;
    height: 88rpx;
}
.container .navs .item {
    flex: 1;
    text-align: center;
    display: block;
}
.container .navs .item text {
    color: #999999;
    font-size: 24rpx;
    transition: all .2s;
    padding: 22rpx 0;
    border-bottom: 2rpx solid transparent;  
}
.container .navs .item.active text {
    color: #333;
    font-weight: 500;
    border-bottom: 2rpx solid #FFDE4E;  
}
.container .list {
    padding: 0 50rpx;
}
.container .list .item {
    display: flex;
    align-items: center;
    padding: 28rpx 0;
    border-bottom: 1rpx solid #ECECEC;
}
.container .list .item:last-child {
    border: 0;
}
.container .list .item .info {
    flex: 1;
}
.container .list .item .info .txt {
    font-size: 28rpx;
}
.container .list .item .info .txt .sub {
    padding-left: 26rpx;
    font-size: 24rpx;
    color: #999;
}
.container .list .item .info .date {
    color: #999999;
    font-size: 24rpx;
    padding-top: 14rpx;
}
.container .list .item .subtract {
    font-size: 32rpx;
}
.container .list .item .add {
    font-size: 32rpx;
    color: #FF6600;
}