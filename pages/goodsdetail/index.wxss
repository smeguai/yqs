.container .banner-wrapper {
    position: relative;
}
.container .banner-wrapper .swiper .item {
    height: 480rpx;
}
.container .banner-wrapper .swiper .item .img {
    height: 100%;
    width: 100%;
}
.container .banner-wrapper .swiper .item .txt {
    position: absolute;
    bottom: 20rpx;
    right: 0;
    border-radius: 25rpx 0 0 25rpx;
    background: rgba(0,0,0,.4);
    font-size: 20rpx;
    color: #fff;
    padding: 8rpx 14rpx 8rpx 32rpx;
}
.container .banner-wrapper .nums {
    position: absolute;
    bottom: 20rpx;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
    align-items: center;
}
.container .banner-wrapper .nums .item {
    background: #fff;
    width: 10rpx;
    height: 10rpx;
    border-radius: 10rpx;
    margin: 0 4rpx;
}
.container .banner-wrapper .nums .item.active {
    width: 20rpx;
    background: #FFDE4E;
}
.container .section {
    padding: 0 24rpx 48rpx 24rpx;
    background: #fff;
}
.container .section .name {
    font-size: 32rpx;
    font-weight: 500;
    padding-top: 32rpx;
}
.container .section .subtxt {
    font-size: 24rpx;
    padding-top: 20rpx;
}
.container .section .price {
    font-size: 52rpx;
    color: #FF6600;
    font-weight: bold;
    padding-top: 16rpx;
}
.container .section .price .oldprice {
    font-size: 28rpx;
    color: #999;
    padding-left: 30rpx;
    font-weight: 400;
}
.container .section .invite {
    background: #FFFBEB;
    border-radius: 10rpx;
    padding: 26rpx 30rpx 34rpx 30rpx;
    margin-top: 20rpx;
}
.container .section .invite .txt {
    font-size: 28rpx;
}
.container .section .invite .bot {
    display: flex;
    align-items: center;
}
.container .section .invite .bot .lf {
    flex: 1;
    display: flex;
}
.container .section .invite .bot .lf .blo {
    position: relative;
    width: 42rpx;
    height: 52rpx;
}
.container .section .invite .bot .lf .blo .friend {
    border-radius: 100%;
    width: 52rpx;
    height: 52rpx;
    border: 2rpx solid #fff;
    box-sizing: border-box;
}
.container .section .invite .bot .btn {
    padding: 14rpx 18rpx;
    font-size: 24rpx;
    background: #FFDE4E;
    border-radius: 26rpx;
}
.container .info {
    background: #fff;
    margin-top: 20rpx;
    padding: 50rpx 24rpx;
}
.container .info .top .avatar {
    width: 98rpx;
    height: 98rpx;
    border-radius: 10rpx;
}
.container .info .top {
    padding-left: 22rpx;
    display: flex;
}
.container .info .top .mid {
    flex: 1;
    padding: 0 22rpx;
    width: 0;
}
.container .info .top .mid .name {
    font-size: 32rpx;
    font-weight: 500;
}
.container .info .top .mid .addrs  {
    font-size: 24rpx;
    color: #666;
}
.container .info .top .rt {
    display: flex;
    align-items: center;
}
.container .info .top .rt .txt {
    font-size: 24rpx;
}
.container .info .top .rt .icon {
    width: 18rpx;
    height: 18rpx;
    margin-left: 12rpx;
}
.container .info .main {
    border-top: 1rpx solid #F8F8F8;
    margin-top: 30rpx;
}
.container .info .main .header {
    display: flex;
    padding: 26rpx 0;
}
.container .info .main .header .text {
    font-size: 28rpx;
}
.container .info .main .icon {
    display: flex;
    flex: 1;
}
.container .info .main .icon .addrs, .container .info .main .phone {
    width: 38rpx;
    height: 38rpx;
    margin: 0 12rpx;
}
.item {
    font-size: 24rpx;
    color: #666;
    position: relative;
    padding: 4rpx 0 4rpx 16rpx;
}
.item::before {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6rpx;
    height: 6rpx;
    background: #666;
    border-radius: 100%;
    content: '';
}