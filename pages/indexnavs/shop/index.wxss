.container .header {
    display: flex;
    justify-content: space-between;
    background: #fff;
    border-bottom: 1rpx solid #f0f0f0;
    padding: 50rpx 24rpx 30rpx 24rpx;
}

.container .header .avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 6rpx;
}

.container .header .info {
    padding-left: 16rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
}

.container .header .info .strong {
    font-size: 32rpx;
    font-weight: bold;
}

.container .header .info .score {
    display: flex;
    align-items: center;
}

.container .header .info .score .count {
    font-size: 20rpx;
    color: #ff634c;
    padding-left: 10rpx;
}

.container .header .info .midd {
    display: flex;
    align-items: center;
}

.container .header .info .midd .lf {
    display: flex;
    align-items: center;
    border-right: 1rpx solid #999;
    padding-right: 32rpx;
    flex: 1;
}

.container .header .info .midd .lf .icon {
    width: 18rpx;
    height: 24rpx;
}

.container .header .info .midd .lf .txt {
    font-size: 24rpx;
    padding-left: 4rpx;
}

.container .header .info .midd .tel {
    width: 28rpx;
    height: 28rpx;
    padding: 10rpx 20rpx;
}

.container .header .info .tags {
    display: flex;
}

.container .header .info .tags .item {
    padding: 6rpx 12rpx;
    border: 1rpx solid #c8c8c8;
    border-radius: 4rpx;
    color: #c8c8c8;
    margin-right: 16rpx;
    font-size: 20rpx;
}

.container .welfare {
    padding: 20rpx 24rpx;
    background: #fff;
}
.container .welfare .btn {
    margin-top: 20rpx;
    background: #FFDE4E;
    border-radius: 34rpx;
    font-size: 32rpx;
    font-weight: bold;
    text-align: center;
    padding: 16rpx 0;
}
.container .welfare .item-wrapper {
    display: flex;
    padding: 18rpx 0;
}

.container .welfare .item-wrapper .scroll .list {
    white-space: nowrap;
}

.container .welfare .item-wrapper .item0 {
    width: 440rpx;
    margin-right: 28rpx;
    display: inline-block;
    box-sizing: border-box;
}

.container .welfare .item-wrapper .item1 {
    flex: 1;
}

.container .welfare .item-wrapper .item {
    background: #fffaef;
    border: 1rpx solid #ffde4e;
    border-radius: 10rpx;
    padding: 6rpx 38rpx;
    align-items: center;
    position: relative;
}

.container .welfare .item-wrapper .item::after {
    content: '';
    position: absolute;
    left: -10rpx;
    top: 50%;
    box-sizing: border-box;
    transform: translateY(-50%);
    width: 20rpx;
    height: 20rpx;
    border-radius: 100%;
    background: #fff;
    border-right: 1rpx solid #ffde4e;
}

.container .welfare .item-wrapper .item::before {
    content: '';
    position: absolute;
    right: -10rpx;
    top: 50%;
    box-sizing: border-box;
    transform: translateY(-50%);
    width: 20rpx;
    height: 20rpx;
    border-radius: 100%;
    background: #fff;
    border-left: 1rpx solid #ffde4e;
}

.container .welfare .item-wrapper .item .txt {
    font-size: 28rpx;
    font-weight: bold;
}

.container .welfare .item-wrapper .item .info {
    display: flex;
    justify-content: space-between;
}

.container .welfare .item-wrapper .item .info .activedate {
    font-size: 24rpx;
    color: #666;
}

.container .welfare .item-wrapper .item .price {
    font-size: 54rpx;
    font-weight: bold;
    color: #f60;
}

.container .welfare .item-wrapper .item .price .tip {
    padding-left: 12rpx;
    font-size: 24rpx;
    font-weight: 400;
    vertical-align: bottom;
}
.container .welfare .item-wrapper .item .price .tag {
    font-size: 20rpx;
    color: #f60;
    border-radius: 10rpx;
    padding: 4rpx 6rpx;
    border: 1rpx solid #f60;
    font-weight: 400;
}
.container .welfare .item-wrapper .item .price .oldprice {
    font-size: 24rpx;
    color: #999;
    padding-left: 8rpx;
    font-weight: 400;
    vertical-align: bottom;
}
.container .welfare .item-wrapper .item .info  .btn {
    width: 120rpx;
    height: 52rpx;
    border-radius: 26rpx;
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
    line-height: 52rpx;
    padding: 0;
}

.container .welfare .item-wrapper .item .info .b0 {
    background: #ffde4e;
}

.container .welfare .item-wrapper .item .info .b1 {
    color: #999;
    border: 1rpx solid #ffde4e;
}

.container .welfare .item-wrapper .item .info .b2 {
    color: #fff;
    background: #f60;
}
.container .discount {
    background: #fff;
    padding: 30rpx 0 44rpx 0;
    margin-top: 20rpx;
}
.container .discount .top {
    display: flex;
    padding: 0 24rpx 32rpx 24rpx;
    justify-content: space-between;
}
.container .discount .top .txt {
font-size: 32rpx;
font-weight: bold;
}
.container .discount .top .more {
font-size: 24rpx;
color: #999999;
}
.container .discount .list {
    white-space: nowrap;
    display: flex;
}
.container .discount .list .item {
    padding: 0 12rpx;
    width: 290rpx;
}
.container .discount .list .item>image {
    width: 290rpx;
    height: 200rpx;
    border-radius: 6rpx;
}
.container .discount .list .item .name {
    font-size: 28rpx;
}
.container .discount .list .item .price {
    font-size: 20rpx;
    color: #FF6600;
}
.container .discount .list .item .price .txt {
    font-size: 32rpx;
    font-weight: bold;
}
.container .discount .list .item .price .old {
    color: #999999;
    padding-left: 10rpx;
}
.container .section {
    padding: 16rpx 24rpx;
    background: #fff;
}
.container .section .top {
    display: flex;
    justify-content: space-between;
    padding: 24rpx 0;
}
.container .section .top .txt {
    font-size: 32rpx;
    font-weight: bold;
}
.container .section .top .more {
    color: #FF6600;
    font-size: 24rpx;
}
.container .section .tags {
    display: flex;
    flex-wrap: wrap;
}
.container .section .tags .item {
    border-radius: 24rpx;
    border: 1rpx solid #C8C8C8;
    padding: 12rpx 22rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    margin: 14rpx 32rpx 14rpx 0;
}
.container .section .list {
    padding-top: 14rpx;
}
.container .section .item {
    display: flex;
}
.container .section .item .avatar {
    width: 68rpx;
    height: 68rpx;
    border-radius: 100%;
}
.container .section .item .info {
    flex: 1;
    padding-left: 22rpx;
    box-sizing: border-box;
    width: 0;
}
.container .section .item .info .name {
    font-size: 28rpx;
}
.container .section .item .info .midd {
    display: flex;
    justify-content: space-between;
}
.container .section .item .info .midd .time {
    font-size: 24rpx;
    color: #999999;
}
.container .section .item .info .content {
    font-size: 24rpx;
    line-height: 36rpx;
}
.container .section .item .info .imglist {
    display: flex;
    padding-top: 22rpx;
}
.container .section .item .info .imglist .img {
    width: 128rpx;
    height: 128rpx;
    padding-right: 24rpx;
}