<view class='container'>
  <view class='search'>
    <image src='../../../static/img/search.png' class='icon'></image>
    <input class='ipt' placeholder='搜索附近商家' bindinput="searchInput" bindconfirm="handleSearch"></input>
  </view>

  <view class='list' wx:if='{{mylist.length > 0}}'>
    <view class='{{item.ask ? "item active": "item"}}' wx:for='{{mylist}}'>
      <view class='header' wx:if='{{item.ask}}'>
        <text class='x'></text>
        <text class='z'></text>
        <text class='d'></text>
        <text class='txt'>正在拼团中</text>
        <text class='d'></text>
        <text class='z'></text>
        <text class='x'></text>
      </view>
      <view class='top'>
        <image src='../../../ /img/seller.png' class='icon'></image>
        <text class='sellername'>{{item.merchantName}}</text>
        <dis class='dis' num='{{item.distance}}' />
      </view>
      <view class='tags'>
        <view class='tag-item' wx:for='{{item.tags}}'>{{item}}</view>
      </view>
      <view class='info'>
        <image class='avart' src='{{item.coverUrl}}'></image>
        <view class='desc'>
          <view class='goodsname str'>{{item.productName}}</view>
          <view class='date'>{{item.startTime}}</view>
          <view class='counttime'>
            <countdown strTime='{{item.endTime}}'></countdown>
            <view class='txt'>还差{{item.disparityNum}}人</view>
          </view>
          <view class='bot'>
            <view class='price'>￥
              <text class='conis'>{{item.price}}</text>
              <text class='oldprice del'>￥{{item.tagPrice}}</text>
            </view>
            <!-- <view class='btn'>继续分享</view> -->
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class='list' wx:if='{{list.length > 0}}'>
    <view class='{{item.ask ? "item active": "item"}}' wx:for='{{list}}' bindtap="handleTogrouppay" data-pid='{{item.productGroupBuyId}}'>
      <view class='top'>
        <image src='../../../static/img/seller.png' class='icon'></image>
        <text class='sellername'>{{item.merchantName}}</text>
        <dis class='dis' num='{{item.distance}}' />
      </view>
      <view class='tags'>
        <view class='tag-item' wx:for='{{item.tags}}'>{{item}}</view>
      </view>
      <view class='info'>
        <image class='avart' src='{{item.coverUrl ? item.coverUrl : "../../static/img/imgloading.png"}}' lazy-load></image>
        <view class='desc'>
          <view class='goodsname str'>{{item.productName}}</view>
          <view class='date'>{{item.startTime}}</view>
          <view class='counttime'>
            <countdown strTime='{{item.endTime}}'></countdown>
            <view class='txt'>还差{{item.personNum}}人</view>
          </view>
          <view class='bot'>
            <view class='price'>￥
              <text class='conis'>{{item.price}}</text>
              <text class='oldprice del'>￥{{item.tagPrice}}</text>
            </view>
            <!-- <view class='btn'>继续分享</view> -->
            <view class='btn'>立即抢购</view>
            <!-- <view class='btn'>立即拼团</view> -->
          </view>
        </view>
      </view>
    </view>
  </view>
</view>