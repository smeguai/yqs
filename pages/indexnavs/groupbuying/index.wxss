.container {
    background: #fff;
    padding: 0 24rpx;
}
.container .list {
    border-top: 1rpx solid #F6F6F6;
    padding: 30rpx 0;
}
.container .list .item.active {
    border-radius: 10rpx;
    border: 2rpx solid #FFDE4E;
    padding: 0;
}
.container .list .item.active .top, .container .list .item.active .tags, .container .list .item.active .info {
    padding-left: 16rpx;
    padding-right: 16rpx;
}
.container .list .item.active .info {
    margin-bottom: 50rpx;
}
.container .list .item.active .top {
    padding-top: 26rpx;
}
.container .list .active .header {
    display: flex;
    align-items: center;
    background: #FFDE4E;
    justify-content: center;
    padding: 20rpx 0;
}
.container .list .active .header text {
    margin: 0 11rpx;
}
.container .list .active .header .x {
    width: 8rpx;
    height: 8rpx;
    border-radius: 100%;
    background: #999999;
}
.container .list .active .header .z {
    width: 12rpx;
    height: 12rpx;
    border-radius: 100%;
    background: #666666;
}
.container .list .active .header .d {
    width: 16rpx;
    height: 16rpx;
    border-radius: 100%;
    background: #333333;
}
.container .list .active .header .txt {
    font-size: 28rpx;
    font-weight: bold;
}
.container .list .item {
    border-bottom: 1rpx solid #F6F6F6;
    padding: 18rpx 0 30rpx 0;
}
.container .list .item:last-child {
    border: 0;
}
.container .list .item .top {
    display: flex;
}
.container .list .item .top .icon {
    width: 24rpx;
    height: 22rpx;
}
.container .list .item .top .sellername {
    font-size: 24rpx;
    padding-left: 20rpx;
    flex: 1;
}
.container .list .item .top .dis {
    font-size: 22rpx;
}
.container .list .item .tags {
    display: flex;
    padding-top: 14rpx;
}
.container .list .item .tags .tag-item {
    padding: 4rpx 8rpx;
    border-radius: 6rpx;
    font-size: 22rpx;
    color: #999999;
    border: 1rpx solid #999999;
    margin-right: 16rpx;
}
.container .list .item .info {
    display: flex;
    padding-top: 24rpx;
}
.container .list .item .info .avart {
    width: 188rpx;
    height: 188rpx;
    border-radius: 6rpx;
    flex: 0 0 188rpx;
}
.container .list .item .info .desc {
    flex: 1;
    padding-left: 28rpx;
    box-sizing: border-box;
    width: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.container .list .item .info .desc .goodsname {
    font-size: 32rpx;
    font-weight: 500;
}
.container .list .item .info .desc .date {
    font-size: 24rpx;
    color: #999;
}
.container .list .item .info .desc .bot {
    display: flex;
}
.container .list .item .info .desc .bot .price {
    font-size: 24rpx;
    color: #FF6600;
    flex: 1;
}
.container .list .item .info .desc .bot .price .conis {
    font-size: 48rpx;
    font-weight: bold;
}
.container .list .item .info .desc .bot .price .oldprice {
    color: #999;
    padding-left: 18rpx;
}
.container .list .item .info .desc .bot .btn {
    width: 128rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    background: #FFDE4E;
    border-radius: 24rpx;
    font-size: 24rpx;
}
.container .list .item .info .desc .counttime {
    display: flex;
    align-items: center;
    padding-top: 10rpx;
}
.container .list .item .info .desc .counttime .txt {
    font-size: 24rpx;
    padding-left: 10rpx;
}