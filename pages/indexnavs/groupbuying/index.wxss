.container {
  background: #fff;
  padding: 0 24rpx;
}

.container .list {
  border-top: 1rpx solid #f6f6f6;
  padding: 30rpx 0;
}

.container .mylist {
  border: 1rpx solid #ffde4e;
  padding: 0;
  border-radius: 10rpx;
}

.container .list .item.active {
  border-radius: 10rpx;
  border: 2rpx solid #ffde4e;
  padding: 0;
}

.container .list .item.active .top, .container .list .item.active .tags,
.container .list .item.active .info {
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.container .list .item.active .info {
  margin-bottom: 50rpx;
}

.container .list .item.active .top {
  padding-top: 26rpx;
}

.container .mylist .header {
  display: flex;
  align-items: center;
  background: #ffde4e;
  justify-content: center;
  padding: 20rpx 0;
  border-radius: 10rpx 10rpx 0 0;
}

.container .list .header text {
  margin: 0 11rpx;
}

.container .list .header .x {
  width: 8rpx;
  height: 8rpx;
  border-radius: 100%;
  background: #999;
}

.container .list .header .z {
  width: 12rpx;
  height: 12rpx;
  border-radius: 100%;
  background: #666;
}

.container .list .header .d {
  width: 16rpx;
  height: 16rpx;
  border-radius: 100%;
  background: #333;
}

.container .list .header .txt {
  font-size: 28rpx;
  font-weight: bold;
}

.container .list .item {
  border-bottom: 1rpx solid #f6f6f6;
  padding: 18rpx 0 30rpx 0;
}

.container .list.mylist .item {
  padding: 18rpx 24rpx;
}

.container .list .item:last-child {
  border: 0;
}

.container .list .item .top {
  display: flex;
  align-items: center;
}

.container .list .item .top .icon {
  width: 28rpx;
  height: 28rpx;
}

.container .list .item .top .sellername {
  font-size: 24rpx;
  padding-left: 20rpx;
  flex: 1;
}

.container .list .item .top .dis {
  font-size: 22rpx;
}

.container .list .item .tags {
  display: flex;
  padding-top: 14rpx;
  flex-wrap: wrap;
}

.container .list .item .tags .tag-item {
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  color: #999;
  border: 1rpx solid #999;
  margin: 0 16rpx 12rpx 0;
}

.container .list .item .info {
  display: flex;
  padding-top: 12rpx;
}

.container .list .item .info .avart {
  width: 270rpx;
  height: 180rpx;
  border-radius: 6rpx;
}

.container .list .item .info .desc {
  flex: 1;
  padding-left: 18rpx;
  box-sizing: border-box;
  width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.container .list .item .info .desc .topi {
  display: flex;
  justify-content: space-between;
}

.container .list .item .info .desc .goodsname {
  font-size: 32rpx;
  font-weight: 500;
}

.container .list .item .info .desc .dis {
  padding-left: 10rpx;
}
.container .list .item .info .desc .tag {
  color: #f60;
  font-size: 20rpx;
  border-radius: 36rpx;
  text-align: center;
  border: 1rpx solid #f60;
  padding: 4rpx 12rpx;
  width: 68rpx;
  display: inline-block;
}
.container .list .item .info .desc .price .tag {
  margin-left: 14rpx;
}
.container .list .item .info .desc .date {
  font-size: 20rpx;
  color: #999;
}

.container .list .item .info .desc .bot {
  display: flex;
  align-items: flex-end;
}

.container .list .item .info .desc .bot .price {
  font-size: 24rpx;
  color: #f60;
  flex: 1;
}

.container .list .item .info .desc .bot .price .conis {
  font-size: 38rpx;
  font-weight: bold;
}

.container .list .item .info .desc .bot .price .oldprice {
  color: #999;
  font-size: 20rpx;
  padding-left: 10rpx;
}

.container .list .item .info .desc .bot .btn {
  width: 128rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: #ffde4e;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.container .list .item .info .desc .counttime {
  display: flex;
  align-items: center;
  padding-top: 10rpx;
}

.container .list .item .info .desc .counttime .txt {
  font-size: 24rpx;
  padding-left: 10rpx;
}
