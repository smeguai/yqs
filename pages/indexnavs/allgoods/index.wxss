.nav {
  background: #fff;
  border-bottom: 1rpx solid #F6F6F6;
  display: flex;
  justify-content: space-between;
  padding: 0 28rpx;
  box-sizing: border-box;
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
}
.nav .item {
  padding:16rpx 0;
  box-sizing: border-box;
  display: inline-block;
  font-size: 28rpx;
  color: #666666;
}
.nav .item.active {
  color: #333;
  font-weight: bold;
  border-bottom: 3rpx solid #FDDD52;
}
.list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.list-wrapper {
  background: #fff;
  padding: 0 30rpx;
}
.list-wrapper .title .top {
  padding: 10rpx 0;
  display: flex;
  align-items: flex-end;
}
.list-wrapper .title .txt {
  font-size: 40rpx;
  font-weight: 500;
}
.list-wrapper .recomend {
  font-size: 24rpx;
  color: #999;
}
.list-wrapper .title .icon {
  border-width: 10rpx;
  border-style: solid;
  border-color: transparent #FDDD52 #FDDD52 transparent;
  margin-left: 12rpx;
  display: inline-block;
}
.list .item {
  width: 330rpx;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}
.list .item .img {
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}
.list .item .name {
  font-size: 28rpx;
  margin-bottom: 12rpx;
  margin-top: 12rpx;
}
.list .item .price {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6600;
  padding-right: 10rpx;
}
.list .item .tag {
  font-size: 20rpx;
  border: 1rpx solid #FF6600;
  color: #FF6600;
  border-radius: 4rpx;
  line-height: 24rpx;
  padding: 4rpx 6rpx;
  display: inline-block;
  text-align: center;
  vertical-align: middle;
}
.list .item .oldprider {
  font-size: 24rpx;
  color: #999999;
  padding-left:  20rpx;
}
.notdata {
  font-size: 24rpx;
  color: #999999;
  padding: 25rpx 0;
  text-align: center;
}